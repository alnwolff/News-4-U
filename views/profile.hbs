<h1>PROFILE VIEW</h1>
{{#with user}}

<h2>Welcome, {{name}}!</h2>

<h3>Personal information</h3>
<ul>
    <li>Name: {{name}}</li>
    <li>Interests:
        {{#each interests}}
          <ul>
              <li>{{this}}</li>
          </ul>
        {{/each}}
    </li>
</ul>

<h3>Read Later Articles:</h3>

{{#if readLater}}
    {{#each readLater}}
        <a href="{{url}}"><h2>{{title}}</h2></a>
        <a href="{{url}}"><img src="{{urlToImage}}" alt="{{title}}" width="300" height="200"></a>
    {{/each}}
{{else}}
<h4>There are no articles to Read Later</h4>
{{/if}}

{{/with}}


