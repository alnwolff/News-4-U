<header>
      <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark p--">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/articleoverview">Newsfeed</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/readlater">Read Later</a>
              </li>
                <a href="/logout" class="btn btn-danger btn-sm btn-success pull-right" data-toggle="button" aria-pressed="false" autocomplete="off">Log out</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

</header>

<div class="title">
  <h2>Read Later</h2>
</div>


{{#with user}}

<div class="title">
  <h3>Hey {{name}}, here is the list of the articles you'd like to read</h3>
</div>

{{#if readLater}}
    {{#each readLater}}
    <div class="card-columns" id="article">
        <a href="{{url}}"><div class="card" style="width: 50em;"></a>
        <a href="{{url}}"><img class="card-img-top p-2" src="{{urlToImage}}" alt="{{title}}"></a>
        
            <a href="{{url}}"><h5 class="card-title text-dark m-2 ">{{title}}</h5></a>
            <p class="card-text text-dark m-2">{{description}}</p>
            <a href="/readLater/{{_id}}/delete" class="btn btn-dark toggle" style="background-color: #DF0A0B; border-color: white">Delete</a>
    </div>
</div>
    {{/each}} 
{{else}}
  <div class="title">
    <h5>There are currently no articles you would like to read later</h5>
  </div>
{{/if}}

{{/with}}