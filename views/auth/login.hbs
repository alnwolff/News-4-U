<div id="container">
  <h2>Log in</h2>

  <form action="/login" method="POST">
      
      <label for="username">Username:</label>
      <input type="text" name="username" id="username" >

      <label for="password">Password:</label>
      <input type="password" name="password" id="password" >

      <button type="submit" id="loginButton" class="btn btn-secondary btn-sm" data-toggle="button" aria-pressed="false" autocomplete="off" >Log in</button>
  </form>
</div>

{{#if message}}
  <div class="title">
    <p style="color: rgb(204, 27, 110)">{{message}}</p>
  </div>
{{/if}}