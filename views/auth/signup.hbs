</header>

<div id="container">
  <h2>Sign up</h2>

  <form action="/signup" method="POST">
      <label for="name">Name:</label>
      <input type="text" name="name" id="name" >
      
      <label for="username">Username:</label>
      <input type="text" name="username" id="username" >

      <label for="password">Password:</label>
      <input type="password" name="password" id="password" >

      <label for="interests">Interests:</label>
      <select name="interests" id="interests" multiple>
          <option value="Economy">Economy</option>
          <option value="Video games">Video Games</option>
          <option value="Music">Music</option>
          <option value="Movies">Movies</option>
          <option value="Art">Art</option>
          <option value="Celebrities">Celebrities</option>
          <option value="Business">Business</option>
          <option value="History">History</option>
          <option value="Psychology">Psychology</option>
          <option value="Spirituality">Spirituality</option>
          <option value="Travel">Travel</option>
          <option value="Cryptocurrency">Cryptocurrency</option>
      </select>

      <button type="submit" id="signupButton" class="btn btn-sm authbttn" style="background-color: #A8DE98; border-color: #A8DE98; color: white" data-toggle="button" aria-pressed="false" autocomplete="off">Sign up</button>
  </form>
</div>

{{#if message}}
  <div class="title">
    <p style="color: rgb(204, 27, 110)">{{message}}</p>
  </div>
{{/if}}