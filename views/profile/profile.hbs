<h1>Profile</h1>
{{#with user}}

<h2>Welcome, {{name}}!</h2>

<h3>Personal information</h3>
<ul>
    <img src="{{imgPath}}" alt="{{imgName}}" width="150" height="150"> 
    <li>Name: {{name}}</li>
    <li>Username: {{username}}</li>
    <li>Interests:
        {{#each interests}}
          <ul>
              <li>{{this}}</li>
          </ul>
        {{/each}}
        <a href="/profile/edit">Edit your Interests</a>
    </li>
</ul>
<br>
<br>
<br>

<h3>Read Later Articles:</h3>

{{#if readLater}}
    {{#each readLater}}
    <div class="card-columns">
        <a href="{{url}}"><div class="card" style="width: 50em;"></a>
        <img class="card-img-top p-2" src="{{urlToImage}}" alt="{{title}}">
        
            <a href="{{url}}"><h5 class="card-title text-dark m-2 ">{{title}}</h5></a>
            <p class="card-text text-dark m-2">{{description}}</p>
            <a href="/profile/readLater/{{_id}}/delete" class="btn btn-dark" style="background-color: #DF0A0B; border-color: white">Delete</a>
    </div>
</div>
