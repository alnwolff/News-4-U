<header>
      <nav class="navbar sticky-top navbar-expand-lg navbar-dark bg-dark p--">
        <div class="container-fluid">
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
              <li class="nav-item">
                <a class="nav-link" aria-current="page" href="/articleoverview">Newsfeed</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/profile">Profile</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/readlater">Read Later</a>
              </li>
                <a href="/logout" class="btn btn-danger btn-sm btn-success pull-right" data-toggle="button" aria-pressed="false" autocomplete="off">Log out</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>

</header>

<div class="title">
  <h2>Profile</h2>
</div>
{{#with user}}

<div id="container">
  <h3>Welcome, {{name}}!</h3>

  <h4>Personal information</h4>
  
  
  <ul id="memberCard">
    <img src="{{imgPath}}" alt="{{imgName}}" width="200" height="200"> 

    <div id="userInfo">
      <li>Name: {{name}}</li>
      <li>Username: {{username}}</li>
      <li>Interests:
          {{#each interests}}
            <ul>
                <li>{{this}}</li>
            </ul>
          {{/each}}
          <a href="/profile/edit">Edit your Information</a>
      </li>
    </div>
  </ul>
  

</div>

<div class="title">
  <h4>Articles to read later</h4>
</div>

{{#if readLater}}
    {{#each readLater}}
    <div class="card-columns" id="article">
        <a href="{{url}}"><div class="card" style="width: 50em;"></a>
        <img class="card-img-top p-2" src="{{urlToImage}}" alt="{{title}}">
        
            <a href="{{url}}"><h5 class="card-title text-dark m-2 ">{{title}}</h5></a>
            <p class="card-text text-dark m-2">{{description}}</p>
            <a href="/profile/readLater/{{_id}}/delete" class="btn btn-dark" style="background-color: #DF0A0B; border-color: white">Delete</a>
    </div>
</div>

    {{/each}}
{{else}}
  <div class="title">
   <h5>There are no articles to Read Later</h5> 
  </div>
{{/if}}

{{/with}}


