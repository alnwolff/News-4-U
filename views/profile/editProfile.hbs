{{#with user}}
<div id="container">
  <h2>Edit your profile</h2>

  <form action="/profile/edit" method="POST" enctype="multipart/form-data">

      <label for="name">Change your Name:</label>
      <input type="text" name="name" id="name" value="{{name}}">
      
      <label for="profile-pic">Change your Profile Picture: </label>
      <img src="{{imgPath}}" alt="{{publicId}}" width="200" height="200">
      <input type="file" name="profile-pic" id="profile-pic">

      <label for="interests">Interests:</label>
      <select name="interests" id="interests" multiple>
          <option value="Economy">Economy</option>
          <option value="Video games">Video Games</option>
          <option value="Music">Music</option>
          <option value="Movies">Movies</option>
          <option value="Art">Art</option>
          <option value="Celebrities">Celebrities</option>
          <option value="Business">Business</option>
          <option value="History">History</option>
          <option value="Psychology">Psychology</option>
          <option value="Spirituality">Spirituality</option>
          <option value="Travel">Travel</option>
      </select>

      <button type="submit" id="signupButton" class="btn btn-sm authbttn" style="background-color: #A8DE98; border-color: #A8DE98; color: white" data-toggle="button" aria-pressed="false" autocomplete="off">Accept changes</button>
  </form>
</div>
{{/with}}


{{#if message}}
  <div class="title">
    <p style="color: rgb(204, 27, 110)">{{message}}</p>
  </div>
{{/if}}
